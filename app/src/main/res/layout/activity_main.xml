<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98DCD3"

    tools:context=".MainActivity">

    <Button
        android:id="@+id/b101"
        android:layout_width="283dp"
        android:layout_height="72dp"
        android:background="#FFFFFF"

        android:foreground="@drawable/wapp3"
        android:text="Check Air Quality "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.309" />

    <Button
        android:id="@+id/b103"
        android:layout_width="281dp"
        android:layout_height="74dp"

        android:foreground="@drawable/wapp2"
        android:text="Weather report"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b101"
        app:layout_constraintVertical_bias="0.363" />



    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="424dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-1821510025407817/1711344442"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>